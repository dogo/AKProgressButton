<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ProgressButton specific attributes -->
    <attr name="ProgressButtonStyle" format="reference"/>
    <declare-styleable name="ProgressButton">
        <attr name="android:clickable" />
        <attr name="android:focusable" />
        <attr name="pb_autoLoading" format="boolean" />
        <attr name="pb_backgroundColor" format="color" />
        <attr name="pb_textAppearance" format="string" />
        <attr name="pb_textSize" format="dimension" />
        <attr name="pb_textColor" format="color" />
        <attr name="pb_text" format="string" />
        <attr name="pb_textAllCaps" format="boolean" />
        <attr name="pb_drawableLeft" format="reference" />
        <attr name="pb_drawableTop" format="reference" />
        <attr name="pb_drawableRight" format="reference" />
        <attr name="pb_drawableBottom" format="reference" />
        <attr name="pb_drawablePadding" format="dimension" />
